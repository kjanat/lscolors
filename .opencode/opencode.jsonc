{
	"$schema": "https://opencode.ai/config.json",
	"formatter": {
		"dprint": {
			"command": [
				"dprint",
				"-c=dprint.jsonc",
				"fmt",
				"$FILE",
			],
			"extensions": [
				".js",
				".ts",
				".cjs",
				".cts",
				".mjs",
				".mts",
				".jsx",
				".tsx",
				".json",
				".jsonc",
				".md",
				".yml",
				".yaml",
				".toml",
				"Dockerfile",
				"Dockerfile.*",
			],
			"environment": {
				"DPRINT_CONFIG_DISCOVERY": "false",
			},
		},
	},
}
