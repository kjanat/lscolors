// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
	"prettier": { "allowed": false },
	"formatter": {
		"external": {
			"command": "dprint",
			"arguments": [
				"fmt",
				"-c=dprint.jsonc",
				"--config-discovery=false",
				"--stdin",
				"{buffer_path}"
			]
		}
	},
	"languages": {
		"TypeScript": {
			"language_servers": ["vtsls", "tsgo", "biome"],
			"formatter": [
				{ "code_action": "fixAll.biome" },
				{ "code_action": "organizeImports.biome" },
				{
					"external": {
						"command": "dprint",
						"arguments": [
							"fmt",
							"-c=dprint.jsonc",
							"--config-discovery=false",
							"--stdin",
							"{buffer_path}"
						]
					}
				}
			]
		}
	}
}
